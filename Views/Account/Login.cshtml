@model Student_Record_Management_System.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <style>
       
        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #e8f0fe, #fceefc);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: #ffffff;
            padding: 40px 35px;
            border-radius: 10px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
            width: 340px;
            transition: box-shadow 0.3s ease;
        }

            .login-container:hover {
                box-shadow: 0 8px 22px rgba(0, 0, 0, 0.15);
            }

            .login-container h2 {
                text-align: center;
                margin-bottom: 30px;
                color: #444;
                font-weight: 600;
            }

            .login-container label {
                display: block;
                margin-bottom: 6px;
                font-weight: 500;
                color: #666;
            }

            .login-container input {
                width: 100%;
                padding: 10px 12px;
                margin-bottom: 18px;
                border: 1px solid #dcdcdc;
                border-radius: 6px;
                font-size: 14px;
                transition: border-color 0.3s ease;
            }

                .login-container input:focus {
                    border-color: #a0c4ff;
                    outline: none;
                }

            .login-container button {
                width: 100%;
                padding: 12px;
                background-color: #a0c4ff;
                color: #fff;
                border: none;
                border-radius: 6px;
                font-size: 15px;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .login-container button:hover {
                    background-color: #8bb2f2;
                }
   
        .validation-message {
            color: red;
            font-size: 14px;
            margin-bottom: 15px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>

        @* Show error message if TempData["LoginError"] is set *@
        @if (TempData["LoginError"] != null)
        {
            <div class="validation-message">@TempData["LoginError"]</div>
        }

        <form method="post" asp-action="Login" asp-controller="Account">
            <label asp-for="Username">Username:</label>
            <input asp-for="Username" type="text" required />
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" type="password" required />
            <button type="submit">Login</button>
        </form>
    </div>
</body>
</html>
